<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout tools:context=".Registration" android:layout_height="match_parent" android:layout_width="match_parent" android:background="#ffffff" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/registration"  >
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"


                android:gravity="center"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="36sp" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/r_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="First Name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/r_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Last Name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/r_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Mobile No."
                    android:importantForAutofill="no"
                    android:inputType="phone" />

            </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_marginStart="30dp"

                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <EditText

                    android:id="@+id/r_lpin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Login Pin"
                    android:importantForAutofill="no"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"

                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <EditText

                    android:id="@+id/r_tpin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Transaction Pin"
                    android:importantForAutofill="no"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/r_email"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Email"

                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>













            <RadioGroup
                android:id="@+id/gender"
                    android:layout_height="wrap_content"
                    android:layout_width="300dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Gender"/>
                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"/>
                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"/>
                    </RadioGroup>



            <Button
                android:id="@+id/signup_btn"
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#27408b"
                android:gravity="center"
                android:text="Sign Up" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>